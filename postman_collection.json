            "name": "3️⃣ 违章管理 API",
            "item": [
                {
                    "name": "3.1 上报违章行为",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type\": \"speeding\",\n  \"intersectionId\": \"intersection-1\",\n  \"vehicleId\": \"vehicle-001\",\n  \"timestamp\": 1702400000,\n  \"speed\": 85,\n  \"description\": \"超速行驶\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8081/api/violations/report",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8081",
                            "path": [
                                "api",
                                "violations",
                                "report"
                            ]
                        },
                        "description": "上报新的违章行为（会触发实时警报）"
                    },
                    "response": []
                },
